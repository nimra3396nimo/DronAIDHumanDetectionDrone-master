<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".SecurityMode"
    tools:showIn="@layout/app_bar_security_mode">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Security Mode"
        android:textStyle="bold"
        android:textColor="#000"
        android:textSize="30sp"
        android:id="@+id/textView7" />


    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/time"
        android:layout_marginTop="122dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="Date"
        android:layout_alignLeft="@+id/time" />

    <TextView
        android:id="@+id/date1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/date"
        android:layout_marginEnd="72dp"
        android:text="Date"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginRight="72dp"
        android:layout_alignParentRight="true" />


    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="160dp"
        android:layout_toStartOf="@+id/textView7"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="Time:"
        android:layout_toLeftOf="@+id/textView7" />

    <TextView
        android:id="@+id/time1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/date1"
        android:layout_alignTop="@+id/time"
        android:text="Time:"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_alignLeft="@+id/date1" />


    <TextView
        android:id="@+id/longitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/date"
        android:layout_marginTop="205dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="Longitude:"
        android:layout_alignLeft="@+id/date" />

    <TextView
        android:id="@+id/longitude1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/date1"
        android:layout_alignTop="@+id/longitude"
        android:text="Longitude:"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_alignLeft="@+id/date1" />


    <TextView
        android:id="@+id/latitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/date"
        android:layout_centerVertical="true"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="Latitude:"
        android:layout_alignLeft="@+id/date" />

    <TextView
        android:id="@+id/latitude1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/date1"
        android:layout_centerVertical="true"
        android:text="Latitude:"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_alignLeft="@+id/date1" />

    <ImageView
        android:id="@+id/img"
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="65dp" />


</RelativeLayout>